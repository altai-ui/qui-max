{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    },
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "stories/**/*.ts",
    "stories/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "sd.config.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
